<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReadingBookFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reading Books"
            android:id="@+id/redingLabel"
            android:textAllCaps="true"
            android:textColor="@color/dark_blue"
            app:fontFamily="sans-serif-smallcaps"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:id="@+id/listBooks"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:id="@+id/readingLayout">
            <Button
                android:id="@+id/fragmentToReadButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Books to Read"
                android:layout_marginTop="80px"
                android:layout_marginRight="50px"
                android:layout_marginLeft="100px"
                android:textColor="@color/white"
                android:background="@drawable/buttons"/>
            <Button
                android:id="@+id/fragmentReadedButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="80px"
                android:layout_marginRight="100px"
                android:layout_marginLeft="50px"
                android:background="@drawable/buttons"
                android:text="Readed books"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>